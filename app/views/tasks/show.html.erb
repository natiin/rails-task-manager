<p><%= @task.title%></p>
<p><%= @task.details%></p>
<p><%= @task.completed%></p>


<button class="btn btn-danger"><%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %> </button>



<button class="btn btn-warning"> <%= link_to 'update', edit_task_path %></button>
<button class="btn btn-success"> <%= link_to 'back', tasks_path %></button>
