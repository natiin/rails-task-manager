<div class="container">
  <h1>All tasks</h1>
  <button class="btn btn-success"><%= link_to 'Create a new task', new_task_path  %></button>
  <ul class="list-group">
  <% @tasks.each do |task|%>
    <li class="list-group-item link-primary"><%= link_to task.title, task_path(task) %></li>
  <% end%>
  </ul>
</div>
